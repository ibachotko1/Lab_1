<UserControl x:Class="Warehouse.Front.Controls.PostConditionDisplay"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Height="60">
    <Border Background="#F8F9FA" BorderBrush="#DEE2E6" BorderThickness="1" CornerRadius="4" Padding="8">
        <StackPanel>
            <TextBlock x:Name="TitleText" Text="Выполнение постусловий" FontWeight="Bold" Margin="0,0,0,4"/>
            <ItemsControl x:Name="ConditionsList">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal" Margin="0,2">
                            <TextBlock Text="{Binding Status}" Width="20" TextAlignment="Center" 
                                       Foreground="{Binding StatusColor}"/>
                            <TextBlock Text="{Binding Description}" Margin="8,0,0,0"/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </Border>
</UserControl>